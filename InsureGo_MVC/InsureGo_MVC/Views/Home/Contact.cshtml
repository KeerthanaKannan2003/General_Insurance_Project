@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --ink-900: #111827;
        --ink-700: #1f2937;
        --ink-500: #6b7280;
        --card: #ffffff;
        --brand-400: #3da5ff;
        --brand-600: #1e6bff;
        --grad-1: linear-gradient(90deg, var(--brand-400), var(--brand-600));
        --shadow-sm: 0 6px 16px rgba(17,24,39,.08);
        --shadow-md: 0 14px 32px rgba(17,24,39,.10);
        --radius: 18px;
    }

    body {
        background: #f5f7fb;
        font-family: "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }

    .contact-wrap {
        max-width: 900px;
        margin: 40px auto;
        padding: 0 24px;
    }

    .contact-card {
        background: var(--card);
        border: 1px solid rgba(17,24,39,.06);
        border-radius: var(--radius);
        box-shadow: var(--shadow-md);
        padding: clamp(20px, 3vw, 32px);
    }

    .contact-heading {
        text-align: center;
        margin-bottom: 24px;
    }

        .contact-heading h2 {
            font-size: clamp(24px, 4vw, 36px);
            font-weight: 900;
            color: var(--ink-900);
            margin: 0;
        }

    .contact-card p {
        color: var(--ink-700);
        line-height: 1.7;
        font-size: 16.5px;
        margin-bottom: 16px;
        text-align: center;
    }

    .contact-list {
        list-style: none;
        padding: 0;
        margin: 0 auto 20px;
        max-width: 600px;
    }

        .contact-list li {
            background: #f9fbff;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            padding: 12px 16px;
            margin-bottom: 12px;
            font-size: 15.5px;
            color: var(--ink-700);
            display: flex;
            align-items: center;
            gap: 8px;
            box-shadow: var(--shadow-sm);
        }

        .contact-list strong {
            color: var(--ink-900);
            min-width: 80px;
            display: inline-block;
        }

    .contact-footer {
        text-align: center;
        font-size: 14px;
        color: var(--ink-500);
        margin-top: 12px;
    }


    .contact-btn {
        display: inline-block;
        margin-top: 18px;
        padding: 12px 20px;
        border-radius: 999px;
        font-weight: 700;
        color: #fff;
        background: var(--grad-1);
        box-shadow: 0 10px 24px rgba(30,107,255,.28);
        text-decoration: none;
        transition: transform .1s ease, filter .2s ease;
    }

        .contact-btn:hover {
            filter: brightness(1.05);
            transform: translateY(-2px);
        }
</style>

<div class="contact-wrap">
    <div class="contact-card">
        <div class="contact-heading">
            <h2>Contact Us</h2>
        </div>

        <p>We’d love to hear from you. Reach out to us using the details below:</p>

        <ul class="contact-list">
            <li><strong>Email:</strong> support@insurego.com</li>
            <li><strong>Phone:</strong> +91 98765 43210</li>
            <li><strong>Address:</strong> InsureGO HQ, Road No. 12, Banjara Hills, Hyderabad, Telangana, India</li>
        </ul>

        <p class="contact-footer">
            For technical issues, policy queries, or claim support, our team is available <br />
            Monday to Saturday, 10 AM to 6 PM IST.
        </p>

        <div style="text-align:center;">
            <a href="@Url.Action("Index","Home")" class="contact-btn">Back to Home</a>
        </div>
    </div>
</div>
