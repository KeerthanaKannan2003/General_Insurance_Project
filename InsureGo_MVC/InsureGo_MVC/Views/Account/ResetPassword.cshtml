@model InsureGo_MVC.Models.ViewModels.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #e3f2fd, #bbdefb);
        font-family: "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }

    .reset-container {
        max-width: 460px;
        margin: 60px auto;
        background: #ffffff;
        border-radius: 16px;
        padding: 32px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.1);
        box-sizing: border-box;
    }

    .reset-heading {
        text-align: center;
        margin-bottom: 28px;
    }

        .reset-heading h2 {
            font-size: 26px;
            font-weight: 700;
            color: #1a237e;
            margin-bottom: 8px;
        }

    .message-success,
    .message-error {
        font-size: 14px;
        margin-bottom: 12px;
        text-align: center;
    }

    .message-success {
        color: #2e7d32;
    }

    .message-error {
        color: #d32f2f;
    }

    .captcha-box {
        margin-bottom: 20px;
        font-size: 14px;
        font-weight: 600;
        color: #455a64;
        text-align: center;
    }

    .form-row {
        display: flex;
        flex-direction: column;
        width: 100%;
        margin-bottom: 20px;
        box-sizing: border-box;
    }

        .form-row label {
            font-size: 14px;
            font-weight: 600;
            color: #37474f;
            margin-bottom: 6px;
            padding-left: 4px;
        }

    .input {
        width: 100%;
        padding: 12px 16px;
        font-size: 15px;
        border-radius: 999px;
        border: 1px solid #cfd8dc;
        background: #f9fbff;
        transition: all 0.25s ease;
        box-sizing: border-box;
    }

        .input:focus {
            outline: none;
            border-color: #1e88e5;
            box-shadow: 0 0 0 3px rgba(30,136,229,0.25);
            background: #fff;
        }

    .btn {
        width: 100%;
        padding: 12px 18px;
        border-radius: 999px;
        border: none;
        color: #fff;
        font-weight: 600;
        font-size: 15px;
        background: linear-gradient(90deg, #1e88e5, #3949ab);
        box-shadow: 0 6px 16px rgba(30,136,229,0.3);
        cursor: pointer;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(30,136,229,0.4);
        }

        .btn:active {
            transform: translateY(1px);
        }

    .link-row {
        text-align: center;
        margin-top: 18px;
        font-size: 14px;
    }

        .link-row a {
            color: #1e88e5;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.2s ease;
        }

            .link-row a:hover {
                color: #3949ab;
            }

    .field-validation-error {
        color: #d32f2f;
        font-size: 13px;
        margin-top: 4px;
        padding-left: 4px;
    }
</style>


<div class="reset-container">
    <div class="reset-heading">
        <h2>Reset Password</h2>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="message-success">@TempData["Success"]</div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="message-error">@ViewBag.Error</div>
    }

    <div class="captcha-box">
        <strong>Captcha:</strong> @ViewBag.Captcha
    </div>

    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-row">
            @Html.LabelFor(m => m.Captcha)
            @Html.TextBoxFor(m => m.Captcha, new { @class = "input", placeholder = "Enter captcha" })
            @Html.ValidationMessageFor(m => m.Captcha)
        </div>

        <div class="form-row">
            @Html.LabelFor(m => m.NewPassword)
            @Html.PasswordFor(m => m.NewPassword, new { @class = "input", placeholder = "Enter new password" })
            @Html.ValidationMessageFor(m => m.NewPassword)
        </div>

        <div class="form-row">
            @Html.LabelFor(m => m.ConfirmPassword)
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input", placeholder = "Confirm new password" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>

        <div class="form-row">
            <input type="submit" value="Reset Password" class="btn" />
        </div>

        <div class="link-row">
            @Html.ActionLink("Back to Login", "Login", "Account")
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}