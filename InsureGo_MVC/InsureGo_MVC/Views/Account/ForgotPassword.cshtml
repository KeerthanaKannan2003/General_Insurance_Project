@model InsureGo_MVC.Models.ViewModels.ForgotPasswordViewModel

@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #e3f2fd, #bbdefb);
        font-family: "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }

    .auth-container {
        max-width: 420px;
        margin: 80px auto;
        background: rgba(255, 255, 255, 0.85);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 20px;
        padding: 32px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.12);
        backdrop-filter: blur(12px);
    }

    .auth-heading {
        text-align: center;
        margin-bottom: 28px;
    }

        .auth-heading h2 {
            font-size: 26px;
            font-weight: 700;
            color: #1a237e;
            margin-bottom: 8px;
        }

    .form-row {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        margin-bottom: 20px;
    }

        .form-row label {
            align-self: flex-start;
            font-size: 14px;
            font-weight: 600;
            color: #37474f;
            margin-bottom: 6px;
        }

    .input {
        width: 100%;
        max-width: 100%;
        padding: 12px 16px;
        font-size: 15px;
        border-radius: 12px;
        border: 1px solid #cfd8dc;
        background: #fafafa;
        transition: all 0.25s ease;
    }

        .input:focus {
            outline: none;
            border-color: #1e88e5;
            box-shadow: 0 0 0 3px rgba(30,136,229,0.25);
            background: #fff;
        }

    .btn {
        width: 100%;
        padding: 12px 18px;
        border-radius: 12px;
        border: none;
        color: #fff;
        font-weight: 600;
        font-size: 15px;
        background: linear-gradient(90deg, #1e88e5, #3949ab);
        box-shadow: 0 6px 16px rgba(30,136,229,0.3);
        cursor: pointer;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(30,136,229,0.4);
        }

        .btn:active {
            transform: translateY(1px);
        }

    .link-row {
        text-align: center;
        margin-top: 18px;
        font-size: 14px;
    }

        .link-row a {
            color: #1e88e5;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.2s ease;
        }

            .link-row a:hover {
                color: #3949ab;
            }

    .field-validation-error {
        color: #d32f2f;
        font-size: 13px;
        margin-top: 4px;
    }
</style>


<div class="auth-container">
    <div class="auth-heading">
        <h2>Forgot Password</h2>
    </div>

    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-row">
            @Html.LabelFor(m => m.EmailId)
            @Html.TextBoxFor(m => m.EmailId, new { @class = "input", placeholder = "Enter your email" })
            @Html.ValidationMessageFor(m => m.EmailId)
        </div>

        <div class="form-row">
            <input type="submit" value="Generate Captcha" class="btn" />
        </div>

        <div class="link-row">
            @Html.ActionLink("Back to Login", "Login", "Account")
        </div>
    }
</div>