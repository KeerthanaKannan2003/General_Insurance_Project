@model InsureGo_MVC.Models.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<style>

    :root {
        --bg: #f5f7fb;
        --ink: #0f254b;
        --muted: #6b7a99;
        --surface: #ffffff;
        --surface-2: #f6f8fc;
        --border: #e6ebf2;
        --primary: #1f62d1;
        --primary-600: #184ea6;
        --teal: #19b3c6;
        --ring: rgba(31,98,209,.22);
        --shadow: 0 16px 40px rgba(10, 26, 70, .08);
        --inset: inset 4px 6px 12px rgba(0,0,0,.06), inset -4px -6px 14px rgba(255,255,255,.95);
        --danger: #e11d48;
    }

    body {
        background: var(--bg);
        color: var(--ink);
        font-family: ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, Helvetica, Arial;
    }

    h2 {
        margin: 18px 16px 16px;
        font-weight: 800;
        color: var(--ink);
    }

    .form {
        width: 100%;
        max-width: 800px;
        margin: 0 auto 48px;
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: 16px;
        padding: 24px;
        box-shadow: var(--shadow);
    }

    .grid-2 {
        display: grid;
        grid-template-columns: repeat(2, minmax(260px, 1fr));
        gap: 16px 24px;
    }

    @@media (max-width: 820px) {
        .grid-2 {
            grid-template-columns: 1fr;
        }
    }


    .form-row {
        display: grid;
        gap: 8px;
    }

        .form-row label {
            font-size: 13.5px;
            color: var(--muted);
            letter-spacing: .2px;
        }

    .input, .form textarea.input {
        appearance: none;
        width: 100%;
        padding: 12px 14px;
        font-size: 15.5px;
        color: var(--ink);
        background: linear-gradient(180deg, #fbfdff, var(--surface-2));
        border: 1px solid var(--border);
        border-radius: 12px;
        box-shadow: var(--inset);
        outline: none;
        transition: border-color .2s ease, box-shadow .2s ease, background .2s ease, transform .06s ease;
        resize: vertical;
        min-height: 44px;
    }

        .input:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 4px var(--ring), var(--inset);
            background: #fff;
            transform: translateY(-1px);
        }

    input[type="date"].input {
        padding-right: 38px;
    }

    .field-validation-error,
    .validation-summary-errors {
        color: var(--danger);
        font-size: 13px;
        margin-top: 4px;
    }

    .btn {
        margin-top: 16px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        padding: 12px 18px;
        border: 0;
        border-radius: 999px;
        color: #fff;
        font-weight: 700;
        background: linear-gradient(90deg, var(--teal), var(--primary));
        box-shadow: 0 10px 22px rgba(31,98,209,.20);
        cursor: pointer;
        transition: transform .06s ease, filter .2s ease, box-shadow .2s ease;
    }

        .btn:hover {
            filter: brightness(1.03);
            box-shadow: 0 12px 26px rgba(31,98,209,.28);
        }

        .btn:active {
            transform: translateY(1px);
        }
</style>

<h2>Register</h2>

@if (ViewBag.Error != null)
{
    <div style="color:red">@ViewBag.Error</div>
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="grid-2">
        <div class="form-row">
            @Html.LabelFor(m => m.FullName)
            @Html.TextBoxFor(m => m.FullName, new { @class = "input", placeholder = "Enter full name" })
            @Html.ValidationMessageFor(m => m.FullName)
        </div>

        <div class="form-row">
            @Html.LabelFor(m => m.EmailId)
            @Html.TextBoxFor(m => m.EmailId, new { @class = "input", placeholder = "Enter email" })
            @Html.ValidationMessageFor(m => m.EmailId)
        </div>

        <div class="form-row">
            @Html.LabelFor(m => m.ContactNumber)
            @Html.TextBoxFor(m => m.ContactNumber, new { @class = "input", placeholder = "Enter contact number" })
            @Html.ValidationMessageFor(m => m.ContactNumber)
        </div>

        <div class="form-row">
            @Html.LabelFor(m => m.DateOfBirth)
            @Html.TextBoxFor(m => m.DateOfBirth, "{0:yyyy-MM-dd}", new { @class = "input", type = "date" })
            @Html.ValidationMessageFor(m => m.DateOfBirth)
        </div>

        <div class="form-row">
            @Html.LabelFor(m => m.Address)
            @Html.TextAreaFor(m => m.Address, new { @class = "input", placeholder = "Enter address" })
            @Html.ValidationMessageFor(m => m.Address)
        </div>

        <div class="form-row">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "input", placeholder = "Enter password" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
    </div>

    <button type="submit" class="btn">Register</button>

    <div style="margin-top:12px;">
        @Html.ActionLink("Already have an account? Login", "Login", "Account")
    </div>
}