﻿@model InsureGo_MVC.Models.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@if (ViewBag.Error != null)
{
    <div style="color:red">@ViewBag.Error</div>
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div>
        @Html.LabelFor(m => m.EmailId)
        @Html.TextBoxFor(m => m.EmailId, new { placeholder = "Enter your email" })
        @Html.ValidationMessageFor(m => m.EmailId)
    </div>

    <div>
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { placeholder = "Enter your password" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>

    <div>
        <input type="submit" value="Login" />
    </div>

    <div>
        @Html.ActionLink("Register", "Register", "Account") |
        @Html.ActionLink("Forgot Password?", "ForgotPassword", "Account")
    </div>
}
