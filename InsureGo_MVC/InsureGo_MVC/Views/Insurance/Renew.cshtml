@model InsureGo_MVC.Models.ViewModels.RenewPolicyViewModel

@{
    ViewBag.Title = "Renew Policy";
}
<style>
    body {
        margin: 0;
        font-family: "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        background: linear-gradient(135deg, #d7ecff, #b3dbff);
    }


    .navbar, nav {
        position: relative;
        width: 100%;
        z-index: 10;
    }


    .renew-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 85vh;
        padding: 40px 20px;
    }


    .renew-card {
        background: rgba(255, 255, 255, 0.97);
        padding: 45px 40px;
        border-radius: 22px;
        box-shadow: 0 25px 60px rgba(0,0,0,0.15);
        width: 100%;
        max-width: 520px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .renew-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 30px 70px rgba(0,0,0,0.18);
        }


    h2 {
        text-align: center;
        color: #0d47a1;
        font-size: 34px;
        font-weight: 700;
        margin-bottom: 30px;
    }


    label {
        font-weight: 600;
        color: #37474f;
        margin-bottom: 8px;
    }


    .form-control {
        border-radius: 14px;
        padding: 14px 16px;
        border: 1px solid #cfd8dc;
        font-size: 15px;
        background: #f9fbff;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #1e88e5;
            box-shadow: 0 0 10px rgba(30,136,229,0.35);
            background: #fff;
        }

    .btn-primary {
        width: 100%;
        margin-top: 15px;
        padding: 14px;
        border-radius: 50px;
        border: none;
        font-size: 17px;
        font-weight: 600;
        background: linear-gradient(90deg, #1e88e5, #3949ab);
        box-shadow: 0 12px 25px rgba(30,136,229,0.35);
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 18px 35px rgba(30,136,229,0.45);
            background: linear-gradient(90deg, #1565c0, #283593);
        }

    .renew-title {
        text-align: center;
        color: #0d47a1;
        font-size: 34px;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .back-link {
        text-align: center;
        margin-top: 25px;
        font-weight: 600;
    }

        .back-link a {
            color: #1e88e5;
            text-decoration: none;
        }

            .back-link a:hover {
                text-decoration: underline;
            }

    @@media (max-width: 500px) {
        .renew-card {
            padding: 30px 22px;
        }

        h2 {
            font-size: 26px;
        }
    }
</style>


<div class="renew-wrapper">
    <div style="width:100%; max-width:520px;">
        <h2 class="renew-title">Renew Your Policy</h2>

        <div class="renew-card">


            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            @using (Html.BeginForm("Renew", "Insurance", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label>Enter Existing Policy Number:</label>
                    @Html.TextBoxFor(m => m.PolicyNumber, new { @class = "form-control", placeholder = "e.g. POL-2024-..." })
                    @Html.ValidationMessageFor(m => m.PolicyNumber, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-primary">Renew Policy</button>
            }

            <div class="back-link">
                <a href="@Url.Action("Index", "Home")">Back to Home</a>
            </div>

        </div>
    </div>

</div>  
</div>    
</div>         