@model InsureGo_MVC.Models.ViewModels.ClaimInsuranceViewModel

@{

    ViewBag.Title = "Claim Insurance";

}
<style>

    body {
        font-family: "Segoe UI", Roboto, sans-serif;
        background: linear-gradient(135deg, #d7ecff, #b3dbff);
        margin: 0;
        padding: 0;
    }

    h2 {
        text-align: center;
        color: #0d47a1;
        font-size: 32px;
        font-weight: 700;
        margin-top: 30px;
        margin-bottom: 20px;
    }


    form {
        background: rgba(255,255,255,0.97);
        max-width: 520px;
        margin: 0 auto 40px;
        padding: 40px 35px;
        border-radius: 22px;
        box-shadow: 0 25px 60px rgba(0,0,0,0.15);
        transition: 0.3s ease;
    }

        form:hover {
            transform: translateY(-5px);
            box-shadow: 0 30px 70px rgba(0,0,0,0.18);
        }


    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: 600;
        color: #37474f;
        margin-bottom: 8px;
        display: block;
    }


    .form-control {
        width: 100%;
        border-radius: 14px;
        padding: 13px 15px;
        border: 1px solid #cfd8dc;
        font-size: 15px;
        background: #f9fbff;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #1e88e5;
            box-shadow: 0 0 10px rgba(30,136,229,0.35);
            background: #fff;
            outline: none;
        }

    textarea.form-control {
        resize: none;
    }


    .btn-primary {
        width: 100%;
        margin-top: 10px;
        padding: 14px;
        border-radius: 50px;
        border: none;
        font-size: 16px;
        font-weight: 600;
        background: linear-gradient(90deg, #1e88e5, #3949ab);
        color: #fff;
        box-shadow: 0 12px 25px rgba(30,136,229,0.35);
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 18px 35px rgba(30,136,229,0.45);
            background: linear-gradient(90deg, #1565c0, #283593);
        }


    .text-danger {
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }

    .alert-danger {
        max-width: 520px;
        margin: 15px auto;
        text-align: center;
        border-radius: 12px;
        padding: 12px;
    }


    @@media (max-width: 500px) {

        form {
            padding: 28px 20px;
        }
    }
</style>


<h2>Claim Insurance</h2>

@if (ViewBag.Error != null)

{
    <div class="alert alert-danger">@ViewBag.Error</div>

}

@using (Html.BeginForm())

{

    @Html.AntiForgeryToken()

    <div class="form-group">

        @Html.LabelFor(m => m.PolicyNumber)

        @Html.TextBoxFor(m => m.PolicyNumber, new { @class = "form-control", placeholder = "Enter Policy Number (e.g. POL-2024-...)" })

        @Html.ValidationMessageFor(m => m.PolicyNumber)
    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.MobileNumber)

        @Html.TextBoxFor(m => m.MobileNumber, new { @class = "form-control" })

        @Html.ValidationMessageFor(m => m.MobileNumber)
    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.ClaimReason)

        @Html.TextAreaFor(m => m.ClaimReason, new { @class = "form-control", rows = 3 })

        @Html.ValidationMessageFor(m => m.ClaimReason)
    </div>

    <button type="submit" class="btn btn-primary">Submit Claim</button>

}
