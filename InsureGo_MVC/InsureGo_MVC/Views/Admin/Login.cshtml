@model InsureGo_MVC.Models.ViewModels.AdminLoginViewModel

@{

    ViewBag.Title = "Admin Login";

    Layout = "~/Views/Shared/_Layout.cshtml";

}

<style>

    body {
        background: linear-gradient(135deg, #e3f2fd, #bbdefb);
        font-family: "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        margin: 0;
        padding: 0;
    }


    header nav, header nav ul {
        display: flex !important;
        flex-direction: row !important;
        justify-content: flex-end;
        align-items: center;
        padding: 12px 40px;
        background: rgba(30, 136, 229, 0.95);
    }

        header nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }

            header nav ul li {
                margin-left: 25px;
            }

                header nav ul li a {
                    color: #fff;
                    font-weight: 500;
                    text-decoration: none;
                    transition: color 0.3s ease;
                }

                    header nav ul li a:hover {
                        color: #ffeb3b;
                    }


    .login-container {
        max-width: 460px;
        margin: 80px auto;
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 40px 32px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.12);
        position: relative;
    }

    .login-heading {
        text-align: center;
        margin-bottom: 32px;
    }

        .login-heading h2 {
            font-size: 28px;
            font-weight: 700;
            color: #1a237e;
            margin-bottom: 8px;
        }


    .form-row {
        margin-bottom: 20px;
        display: flex;
        flex-direction: column;
    }

        .form-row label {
            font-size: 16px;
            font-weight: 600;
            color: #37474f;
            margin-bottom: 6px;
            padding-left: 4px;
        }

    .input {
        width: 100%;
        padding: 12px 16px;
        font-size: 15px;
        border-radius: 999px;
        border: 1px solid #cfd8dc;
        background: #f9fbff;
        transition: all 0.25s ease;
    }

        .input:focus {
            outline: none;
            border-color: #1e88e5;
            box-shadow: 0 0 0 3px rgba(30,136,229,0.25);
            background: #fff;
        }


    .btn {
        width: 100%;
        padding: 12px 18px;
        border-radius: 999px;
        border: none;
        color: #fff;
        font-weight: 600;
        font-size: 15px;
        background: linear-gradient(90deg, #1e88e5, #3949ab);
        box-shadow: 0 6px 16px rgba(30,136,229,0.3);
        cursor: pointer;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(30,136,229,0.4);
        }

        .btn:active {
            transform: translateY(1px);
        }


    .field-validation-error, .error-message {
        color: #d32f2f;
        font-size: 13px;
        margin-top: 4px;
        padding-left: 4px;
        text-align: center;
    }


    @@media (max-width: 480px) {

        .login-container {
            margin: 60px 20px;
            padding: 32px 20px;
        }

        header nav, header nav ul {
            flex-direction: column !important;
            align-items: center;
        }

            header nav ul li {
                margin-left: 0;
                margin-bottom: 10px;
            }
    }
</style>


<div class="login-container">
    <div class="login-heading">
        <h2>Admin Login</h2>
    </div>

    @using (Html.BeginForm("Login", "Admin", FormMethod.Post))

    {

        @Html.AntiForgeryToken()

        <div class="form-row">

            @Html.LabelFor(m => m.Username)

            @Html.TextBoxFor(m => m.Username, new { @class = "input", placeholder = "Enter username" })

            @Html.ValidationMessageFor(m => m.Username)
        </div>

        <div class="form-row">

            @Html.LabelFor(m => m.Password)

            @Html.PasswordFor(m => m.Password, new { @class = "input", placeholder = "Enter password" })

            @Html.ValidationMessageFor(m => m.Password)
        </div>

        <div class="form-row">
            <input type="submit" value="Login" class="btn" />
        </div>

    }

    @if (TempData["Error"] != null)

    {
        <p class="error-message">@TempData["Error"]</p>

    }
</div>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")

}