@model InsureGo_MVC.Models.ViewModels.VehicleViewModel

@Model Html.BeginForm("Buy", "Insurance", FormMethod.Post)
{
@Html.AntiForgeryToken()

<div class="form-group">
    @Html.LabelFor(m => m.VehicleType, new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(m => m.VehicleType, new SelectList(new[] { "2W", "4W" }), "Select Vehicle Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.VehicleType)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Manufacturer)
    @Html.TextBoxFor(m => m.Manufacturer, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Manufacturer)
</div>

<div class="form-group">
    @Html.LabelFor(m => m.VehicleModel)
    @Html.TextBoxFor(m => m.VehicleModel, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.VehicleModel)
</div>

<div class="form-group">
    @Html.LabelFor(m => m.DrivingLicence)
    @Html.TextBoxFor(m => m.DrivingLicence, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.DrivingLicence)
</div>

<div class="form-group">
    @Html.LabelFor(m => m.PurchaseDate)
    @Html.TextBoxFor(m => m.PurchaseDate, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control" })
    @Html.ValidationMessageFor(m => m.PurchaseDate)
</div>

<div class="form-group">
    @Html.LabelFor(m => m.RegistrationNumber)
    @Html.TextBoxFor(m => m.RegistrationNumber, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.RegistrationNumber)
</div>

<div class="form-group">
    @Html.LabelFor(m => m.EngineNumber)
    @Html.TextBoxFor(m => m.EngineNumber, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.EngineNumber)
</div>

<div class="form-group">
    @Html.LabelFor(m => m.ChassisNumber)
    @Html.TextBoxFor(m => m.ChassisNumber, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.ChassisNumber)
</div>

<div class="form-group">
    <input type="submit" value="Next" class="btn btn-primary" />
</div>
}
