@model InsureGo_MVC.Models.ViewModels.VehicleViewModel

@{

    ViewBag.Title = "Add Vehicle";

    Layout = "~/Views/Shared/_Layout.cshtml";

}

<style>

    body {
        background: linear-gradient(135deg, #e3f2fd, #bbdefb);
        font-family: "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }

    .add-vehicle-wrapper {
        max-width: 600px;
        margin: 40px auto;
        background: #ffffff;
        border-radius: 16px;
        padding: 32px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    }

    .add-heading {
        font-size: 26px;
        font-weight: 700;
        color: #1a237e;
        text-align: center;
    }

    .vehicle-type-buttons {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin: 20px 0;
    }

    .type-btn {
        padding: 12px 24px;
        border-radius: 999px;
        border: none;
        font-weight: 600;
        background: linear-gradient(90deg, #1e88e5, #3949ab);
        color: #fff;
        cursor: pointer;
    }

        .type-btn.active {
            background: linear-gradient(90deg, #3949ab, #1e88e5);
        }

    .form-group {
        margin-bottom: 18px;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border-radius: 999px;
        border: 1px solid #cfd8dc;
    }

    .btn-primary {
        width: 50%;
        padding: 12px;
        border-radius: 999px;
        border: none;
        background: linear-gradient(90deg, #1e88e5, #3949ab);
        color: #fff;
        font-weight: 600;
    }

    .text-danger {
        font-size: 13px;
    }
</style>

<div class="add-vehicle-wrapper">
    <h2 class="add-heading">Add Vehicle</h2>

    <div class="vehicle-type-buttons">
        <button type="button" class="type-btn" onclick="selectType('2W', this)">2 Wheeler</button>
        <button type="button" class="type-btn" onclick="selectType('4W', this)">4 Wheeler</button>
    </div>

    @using (Html.BeginForm("Add", "Vehicle", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" id="VehicleType" name="VehicleType" />

        <div id="vehicle-details" style="display:none;">


            <div class="form-group">
                @Html.LabelFor(m => m.Manufacturer)
                @Html.TextBoxFor(m => m.Manufacturer, new { @class = "form-control", required = "required" })
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.VehicleModel)
                @Html.TextBoxFor(m => m.VehicleModel, new { @class = "form-control", required = "required" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.DrivingLicence)
                @Html.TextBoxFor(m => m.DrivingLicence, new
                {
                    @class = "form-control",
                    placeholder = "TN45 89878767",
                    pattern = "^[A-Z]{2}[0-9]{2}\\s[0-9]{8}$",
                    title = "Format: TN45 89878767",
                    required = "required"
                })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.PurchaseDate)
                @Html.TextBoxFor(m => m.PurchaseDate, "{0:yyyy-MM-dd}", new
                {
                    type = "date",
                    @class = "form-control",
                    id = "purchaseDate",
                    required = "required"
                })
                <span id="dateError" class="text-danger"></span>
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.RegistrationNumber)
                @Html.TextBoxFor(m => m.RegistrationNumber, new
                {
                    @class = "form-control",
                    placeholder = "TS09AB1234",
                    pattern = "^[A-Z]{2}[0-9]{2}[A-Z]{2}[0-9]{4}$",
                    title = "Format: TS09AB1234",
                    required = "required"
                })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.EngineNumber)
                @Html.TextBoxFor(m => m.EngineNumber, new
                {
                    @class = "form-control",
                    placeholder = "ENG987654321",
                    pattern = "^ENG[0-9A-Za-z]+$",
                    title = "Engine must start with ENG",
                    required = "required"
                })
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.ChassisNumber)
                @Html.TextBoxFor(m => m.ChassisNumber, new
                {
                    @class = "form-control",
                    placeholder = "TN38KK3636",
                    pattern = "^[A-Z]{2}[0-9]{2}[A-Z]{2}[0-9]{4}$",
                    title = "Format: TN38KK3636",
                    required = "required"
                })
            </div>

            <div style="text-align:center;">
                <button type="submit" class="btn-primary">Next: Select Plan</button>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function selectType(type, btn) {
            document.getElementById("VehicleType").value = type;
            document.getElementById("vehicle-details").style.display = "block";
            document.querySelectorAll('.type-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
        }


        document.querySelector("form").addEventListener("submit", function (e) {
            let dateInput = document.getElementById("purchaseDate").value;
            let selectedDate = new Date(dateInput);
            let today = new Date();
            today.setHours(0, 0, 0, 0);

            if (selectedDate >= today) {
                e.preventDefault();
                document.getElementById("dateError").innerText = "Purchase date must be before today";
            }
        });
    </script>
}