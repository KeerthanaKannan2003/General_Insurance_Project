@model InsureGo_MVC.Models.ViewModels.VehicleViewModel

@{
    ViewBag.Title = "Add Vehicle";
}

<div class="container mt-5">
    <h2>Add Vehicle</h2>
    <p>Please enter your vehicle details to continue.</p>

    @using (Html.BeginForm("Add", "Vehicle", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
    {
        @Html.AntiForgeryToken()

        <!-- Vehicle Type -->
        <div class="form-group">
            @Html.LabelFor(m => m.VehicleType)
            @Html.DropDownListFor(m => m.VehicleType,
                new SelectList(new[] { "2W", "4W" }),
                "Select Vehicle Type",
                new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.VehicleType, "", new { @class = "text-danger" })
        </div>

        <!-- Manufacturer -->
        <div class="form-group">
            @Html.LabelFor(m => m.Manufacturer)
            @Html.TextBoxFor(m => m.Manufacturer, new { @class = "form-control", placeholder = "e.g. Honda, Maruti, Tata" })
            @Html.ValidationMessageFor(m => m.Manufacturer, "", new { @class = "text-danger" })
        </div>

        <!-- Vehicle Model -->
        <div class="form-group">
            @Html.LabelFor(m => m.VehicleModel)
            @Html.TextBoxFor(m => m.VehicleModel, new { @class = "form-control", placeholder = "e.g. Activa 5G, Swift Dzire" })
            @Html.ValidationMessageFor(m => m.VehicleModel, "", new { @class = "text-danger" })
        </div>

        <!-- Driving Licence -->
        <div class="form-group">
            @Html.LabelFor(m => m.DrivingLicence)
            @Html.TextBoxFor(m => m.DrivingLicence, new { @class = "form-control", placeholder = "e.g. DL-0420190012345" })
            @Html.ValidationMessageFor(m => m.DrivingLicence, "", new { @class = "text-danger" })
        </div>

        <!-- Purchase Date -->
        <div class="form-group">
            @Html.LabelFor(m => m.PurchaseDate)
            @Html.TextBoxFor(m => m.PurchaseDate, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control", placeholder = "Select purchase date" })
            @Html.ValidationMessageFor(m => m.PurchaseDate, "", new { @class = "text-danger" })
        </div>

        <!-- Registration Number -->
        <div class="form-group">
            @Html.LabelFor(m => m.RegistrationNumber)
            @Html.TextBoxFor(m => m.RegistrationNumber, new { @class = "form-control", placeholder = "e.g. TS09AB1234" })
            @Html.ValidationMessageFor(m => m.RegistrationNumber, "", new { @class = "text-danger" })
        </div>

        <!-- Engine Number -->
        <div class="form-group">
            @Html.LabelFor(m => m.EngineNumber)
            @Html.TextBoxFor(m => m.EngineNumber, new { @class = "form-control", placeholder = "e.g. ENG987654321" })
            @Html.ValidationMessageFor(m => m.EngineNumber, "", new { @class = "text-danger" })
        </div>

        <!-- Chassis Number -->
        <div class="form-group">
            @Html.LabelFor(m => m.ChassisNumber)
            @Html.TextBoxFor(m => m.ChassisNumber, new { @class = "form-control", placeholder = "e.g. CHS123456789" })
            @Html.ValidationMessageFor(m => m.ChassisNumber, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary mt-3">
            Next: Select Plan
        </button>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
